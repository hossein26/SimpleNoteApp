<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#253165</item>
        <item name="colorPrimaryVariant">#535a93</item>
        <item name="colorOnPrimary">#000a3a</item>
        <item name="android:textColor">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1976d2</item>
        <item name="colorSecondaryVariant">#63a4ff</item>
        <item name="colorOnSecondary">#004ba0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="color">@color/white</item>

    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#253165</item>
        <item name="colorPrimaryVariant">#535a93</item>
        <item name="colorOnPrimary">#000a3a</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1976d2</item>
        <item name="colorSecondaryVariant">#63a4ff</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>